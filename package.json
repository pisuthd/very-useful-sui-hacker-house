{
    "name": "root",
    "private": true,
    "workspaces": [
      "packages/*"
    ],
    "scripts": {
      "bootstrap": "npm install; lerna bootstrap;",
      "start": "run-p --print-label package:*",
      "build": "lerna run --parallel build",
      "package:client": "lerna run --scope client --stream dev",
      "test": "lerna run --scope backend --stream test"
    },
    "devDependencies": {
      "lerna": "^6.6.2",
      "npm-run-all": "^4.1.5"
    }
  }